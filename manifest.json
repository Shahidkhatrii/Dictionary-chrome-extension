{
    "manifest_version": 3,
    "name": "Dictionary Extension",
    "version": "1.0",
    "description": "A simple dictionary extension",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon.png"
    },
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ],
            "css": [
                "content_style.css"
            ]
        }
    ]
}